# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/icy_app?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_change_in_production
REFRESH_TOKEN_EXPIRY=30d

# Redis Cache (uncomment to use)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Email Configuration
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@icy-app.com

# Application Settings
API_BASE_URL=/api/v1
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Admin User Setup
ADMIN_EMAIL=admin@icy-app.com
ADMIN_PASSWORD=AdminSecurePassword123
