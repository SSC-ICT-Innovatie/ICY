# Server Configuration
PORT=80
NODE_ENV=production

# MongoDB Atlas Connection - REPLACE WITH ACTUAL CONNECTION STRING
MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/icy_app?retryWrites=true&w=majority"

# JWT Authentication - REPLACE WITH NEW SECRETS FOR PRODUCTION
JWT_SECRET="REPLACE_WITH_UNIQUE_PRODUCTION_SECRET"
REFRESH_TOKEN_SECRET="REPLACE_WITH_UNIQUE_PRODUCTION_REFRESH_SECRET"
JWT_EXPIRY=1d
REFRESH_TOKEN_EXPIRY=30d

# Redis Cache Configuration - UNCOMMENT AND CONFIGURE IF USING REDIS IN PRODUCTION
# REDIS_HOST=your-redis-host.example.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Email Configuration - REPLACE WITH REAL EMAIL SERVICE
EMAIL_HOST=smtp.company-mail-service.com
EMAIL_PORT=587
EMAIL_USER=noreply@your-domain.com
EMAIL_PASS=real-email-password
EMAIL_FROM="ICY Application <noreply@your-domain.com>"

# Application Settings
API_BASE_URL=/api/v1
CORS_ORIGIN=https://icy-app.com,https://api.icy-app.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Admin User Setup - CHANGE FOR PRODUCTION
ADMIN_EMAIL="admin@your-domain.com"
ADMIN_PASSWORD="REPLACE_WITH_STRONG_UNIQUE_ADMIN_PASSWORD"

# Security Settings
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="REPLACE_WITH_UNIQUE_PRODUCTION_SESSION_SECRET"

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_MARKETPLACE=true
ENABLE_TEAMS=true
